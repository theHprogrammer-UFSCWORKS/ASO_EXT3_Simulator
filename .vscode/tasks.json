{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.out build active file",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++17",
				"*.cpp",
				"-o",
				"${workspaceFolder}/main.out",
				"-lcrypto",
				"-lgtest",
				"-lpthread"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: g++"
		}
	]
}
